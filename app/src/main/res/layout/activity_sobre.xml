<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/shopping_cart_icon" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vindo ao Mini_Mercado!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="@string/tvContent"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Nossa Equipe:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvMember1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Pietro Rantin - rm87874"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvMember2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Nicolas Galvão - rm88073"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvMember3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Sophia Ferreira - rm87868"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvMember4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Gabriel Candançan - rm88364"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:gravity="center" />



    <!-- Adicione outros elementos de layout conforme necessário -->

</LinearLayout>


